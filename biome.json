{
    "$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": false
    },
    "files": {
        "ignoreUnknown": false
    },
    "formatter": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "javascript": {
        "parser": {
            "unsafeParameterDecoratorsEnabled": true
        },
        "formatter": {
            "enabled": true,
            "quoteStyle": "single",
            "jsxQuoteStyle": "single",
            "trailingCommas": "all",
            "semicolons": "asNeeded",
            "arrowParentheses": "asNeeded",
            "indentWidth": 2,
            "indentStyle": "space",
            "lineWidth": 80,
            "quoteProperties": "asNeeded"
        }
    },
    "json": {
        "parser": {
            "allowComments": true
        },
        "formatter": {
            "enabled": true,
            "indentStyle": "space",
            "indentWidth": 2,
            "lineWidth": 80
        }
    }
}